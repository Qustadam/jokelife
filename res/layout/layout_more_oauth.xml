<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
	android:layout_width="fill_parent" 
	android:background="#eee"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">

 <RelativeLayout android:layout_width="fill_parent"
		android:id="@+id/layout01" 
		android:layout_height="50dp"
		android:background="@drawable/bottom_bar"
		android:layout_alignParentTop="true" 
		android:orientation="horizontal">
	 <Button android:id="@+id/button_back" 
		    android:layout_width="80dp"
		    android:layout_height="40dp"
		    android:background="@drawable/btn_back"
		  	android:layout_alignParentLeft="true"
			android:layout_centerVertical="true" 
			android:layout_marginLeft="6.0dip" 
			android:textColor="@color/white"
		    android:text="@string/button_back"
		    android:textSize="15dp"
		    android:textStyle="bold"
		    android:gravity="center"
		     android:clickable="true"
		    android:onClick="back"
			 />
     <TextView 
            android:id="@+id/home_resource"
			android:text="@string/more_text_third"
			android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
		    android:layout_centerHorizontal="true"
		    android:textColor="@color/white"
		    android:textSize="@dimen/title_size"
		    android:textStyle="bold"
		    android:gravity="center"/>
		
	
	</RelativeLayout>
    
 	
     <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- *********************************************************************** -->

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="第三方平台授权 "
                    android:textColor="#000"
                    android:textSize="17sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@drawable/preference_first_item"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="auth_sinaweibo" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="新浪微博"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/sinaAuth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="matrix"
                    android:text="未授权" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/preference_item"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="auth_qqweibo" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="腾讯微博"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/qqAuth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="matrix"
                    android:text="未授权" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/preference_item"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="auth_qzone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="QQ空间"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/qzoneAuth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="matrix"
                    android:text="未授权" />
            </RelativeLayout>
 
            
             <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/preference_item"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="auth_renren" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="人人网"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/renrenAuth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="matrix"
                    android:text="未授权" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/preference_last_item"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="auth_kaixin" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="开心网"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/kaixinAuth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="matrix"
                    android:text="未授权" />
            </RelativeLayout>

          

           
        </LinearLayout>
    </ScrollView>

</LinearLayout>